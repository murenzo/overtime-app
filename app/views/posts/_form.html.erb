<%= form_for @post do |f| %>
  
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
      <%= js add_gritter(msg, :title => "Overtime App Notification", :sticky => false, :time => 3000) %>
    <% end %>
  <% end %>

  <div class="mb-3">
    <%= f.label :date, class: "form-label" %>
    <%= f.date_field :date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :rationale, class: "form-label" %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.radio_button :status, 'submitted' %>
    <%= f.label :status, 'Submitted' %>

    <%= f.radio_button :status, 'approved' %>
    <%= f.label :status, 'Approved' %>

    <%= f.radio_button :status, 'rejected' %>
    <%= f.label :status, 'Rejected' %>

  </div>
  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>
