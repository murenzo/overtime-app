<%= form_for @post do |f| %>

  <div class="mb-3">
    <%= f.label :date, class: "form-label" %>
    <%= f.date_field :date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :rationale, class: "form-label" %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div>

  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>